{
  "name": "vscode-autoprefixer",
  "displayName": "Autoprefixer",
  "description": "Parse CSS and add vendor prefixes automatically.",
  "version": "1.0.4",
  "publisher": "mrmlnc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.3.0"
  },
  "icon": "icon.svg",
  "homepage": "https://github.com/mrmlnc/vscode-autoprefixer/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmlnc/vscode-autoprefixer"
  },
  "keywords": [
    "autoprefixer",
    "prefixes",
    "postcss"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:autoprefixer.execute",
    "onLanguage:css",
    "onLanguage:less",
    "onLanguage:scss"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "autoprefixer.execute",
      "title": "Autoprefix CSS"
    }],
    "configuration": {
      "type": "object",
      "title": "Autoprefixer configuration options",
      "properties": {
        "autoprefixer.browsers": {
          "type": "array",
          "default": ["last 2 versions", "> 5%"],
          "description": "Which browsers you need to support."
        },
        "autoprefixer.prefixOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Add vendor prefixes to CSS when you save a file."
        }
      }
    }
  },
  "devDependencies": {
    "vscode": "^0.11.0",
    "xo": "^0.16.0"
  },
  "dependencies": {
    "autoprefixer": "6.4.1",
    "postcss": "5.1.2",
    "postcss-safe-parser": "2.0.0",
    "postcss-scss": "0.3.0",
    "postcss-less": "0.15.0",
    "npm-module-path": "1.0.0"
  },
  "scripts": {
    "test": "xo"
  },
  "xo": {
    "space": true,
    "rules": {
      "indent": [2, 2, { "SwitchCase": 1 }],
      "no-var": 2,
      "prefer-const": [2, { "destructuring": "all" }],
      "space-before-function-paren": [2, "never"],
      "babel/arrow-parens": [2, "always"],
      "babel/object-curly-spacing": [2, "always"],
      "babel/generator-star-spacing": [2, "after"]
    },
    "envs": [
      "node"
    ]
  }
}
